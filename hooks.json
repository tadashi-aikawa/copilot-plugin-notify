{
  "version": 1,
  "hooks": {
    "preToolUse": [
      {
        "type": "command",
        "bash": "$HOME/.copilot/installed-plugins/_direct/copilot-plugin-notify/scripts/notify.sh",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "agentStop": [
      {
        "type": "command",
        "bash": "$HOME/.copilot/installed-plugins/_direct/copilot-plugin-notify/scripts/notify.sh",
        "cwd": ".",
        "timeoutSec": 10
      }
    ]
  }
}
